<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.junyi.com.junyi.one2many.dao.StudentLectureRefDao">

    <resultMap id="studentLectureMap" type="com.junyi.com.junyi.one2many.entity.StudentLectureRef">
        <id property="studentId" column="student_id"/>
        <id property="lectureId" column="lecture_id"/>
        <result property="score" column="score"/>
        <association property="lecture" column="lecture_id"
                     select="com.junyi.com.junyi.one2many.dao.LectureDao.findById"/>
        <association property="student" column="student_id"
                     select="com.junyi.com.junyi.one2many.dao.StudentDao.findById"/>
    </resultMap>

    <sql id="Base_Column_List">
        student_id, lecture_id, score
    </sql>
    <select id="findStudentLectureByStuId" parameterType="int" resultMap="studentLectureMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM student_lecture_ref
        WHERE student_id = #{studentId}
    </select>

    <select id="findStudentLectureByLecId" parameterType="int" resultMap="studentLectureMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM student_lecture_ref
        WHERE lecture_id = #{lectureId}
    </select>

</mapper>